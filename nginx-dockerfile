FROM busybox:latest

RUN wget http://nginx.org/download/nginx-1.21.6.tar.gz && \
    tar -xzvf nginx-1.21.6.tar.gz && \
    cd nginx-1.21.6 && \
    ./configure --without-http_rewrite_module --without-http_gzip_module && \
    make && \
    make install

RUN mkdir -p /var/log/nginx

EXPOSE 80

ENTRYPOINT ["nginx", "-g", "daemon off;"]
